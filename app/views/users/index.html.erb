<div class="d-flex justify-content-center">
  <div class="card col-sm-5 m-3">
    <h1>Events I Created</h1>
    <p>Click on an event title to see the details </p>
    <ul class="list-unstyled">
      <% @created_events.each do |event| %>
        <li>
           <%= link_to event.even_name, event_path(event) %>
           @<%= event.location %>
           Date:<%= event.date %>
        </li> 
      <% end %>
    </ul>
  </div>

  <div class="card col-sm-5 m-3">
    <h1>Events Am Attending </h1>
    <p>Click on an event title to see the details </p>
    <ul class="list-unstyled">
      <% @attended_events.each do |event| %>
        <li>
          <%= link_to event.even_name, event_path(event) %>
           @<%= event.location %>
           Date:<%= event.date %>
        </li> 
      <% end %>
    </ul>
  </div>
</div>

